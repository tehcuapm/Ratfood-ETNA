<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FragmentRestaurant">

    <fragment
        android:id="@+id/FragmentRestaurant"
        android:name="com.example.ratfoodapp.views.RestaurantFragment"
        android:label="@string/label_fragment_restaurant"
        tools:layout="@layout/fragment_restaurant">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/FragmentLogin" />
    </fragment>
    <fragment
        android:id="@+id/FragmentLogin"
        android:name="com.example.ratfoodapp.views.LoginFragment"
        android:label="@string/label_fragment_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FragmentRestaurant" />
    </fragment>
</navigation>